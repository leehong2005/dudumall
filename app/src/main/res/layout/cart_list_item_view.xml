<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:id="@+id/cart_list_item_shop_info">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/list_separator_line_color"
            />

        <ImageView
            android:id="@+id/cart_shop_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="18dp"
            android:src="@drawable/cart_shop_icon"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/cart_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            android:layout_toRightOf="@id/cart_shop_icon"
            android:layout_marginLeft="8dp"
            android:text="家乐福超市(果园店)"
            android:textSize="16dp"
            android:textColor="@color/text_color"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cart_list_item_product_info"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:paddingLeft="15dp"
        android:paddingBottom="16dp"
        android:paddingRight="12dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/list_separator_line_color"
            />

        <ImageView
            android:id="@+id/cart_list_item_product_pic"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/apple"
            android:layout_marginTop="16dp"
            />

        <TextView
        android:id="@+id/cart_list_item_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:layout_toRightOf="@id/cart_list_item_product_pic"
        android:text="三元老北京凝固型酸奶180g"
        android:textSize="16dp"
        android:textColor="@color/text_color"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        android:singleLine="true"
        android:ellipsize="end"
        />

        <TextView
            android:id="@+id/cart_list_item_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@id/cart_list_item_product_name"
            android:text="$79.00"
            android:textSize="16dp"
            android:textColor="@color/orange"
            android:singleLine="true"
            android:ellipsize="end"
            />

        <ImageView
            android:id="@+id/cart_list_item_add_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/cart_add_btn_selector"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/cart_list_item_count_txt"
            android:layout_width="26dp"
            android:layout_height="36dp"
            android:layout_toLeftOf="@id/cart_list_item_add_btn"
            android:text="1"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:id="@+id/cart_list_item_subtract_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/cart_subtract_btn_selector"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/cart_list_item_count_txt"
            />
    </RelativeLayout>
</LinearLayout>