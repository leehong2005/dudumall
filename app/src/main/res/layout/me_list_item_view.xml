<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_color"
              android:orientation="vertical">

    <View
        android:id="@+id/my_item_top_view"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/background_color"/>

    <View
        android:id="@+id/my_item_top_separator_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_separator_line_color"/>

    <RelativeLayout
        android:id="@+id/my_item_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingRight="12dp"
        >

        <ImageView
            android:id="@+id/my_item_image"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/my_myself_icon"
            />

        <TextView
            android:id="@+id/my_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/my_item_image"
            android:text="个人信息"
            android:textColor="@color/text_color"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/my_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="未登录"
            android:textColor="@color/orange"
            android:textSize="16dp"/>

        <ImageView
            android:id="@+id/my_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_indicator"/>
    </RelativeLayout>

    <View
        android:id="@+id/my_item_bottom_separator_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_separator_line_color"/>

    <View
        android:id="@+id/my_item_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/background_color"/>

</LinearLayout>