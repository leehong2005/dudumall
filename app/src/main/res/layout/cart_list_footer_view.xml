<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="12dp"
              android:layout_marginBottom="20dp"
              android:background="@android:color/white">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_separator_line_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/products_amount_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="商品金额"
            android:textColor="@color/text_gray"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/products_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/products_amount_txt"
            android:layout_marginLeft="16dp"
            android:text="$0.00"
            android:textColor="@color/orange"
            android:textSize="16dp"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_separator_line_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/deliver_amount_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="配  送  费"
            android:textColor="@color/text_gray"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/deliver_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/deliver_amount_txt"
            android:layout_marginLeft="16dp"
            android:text="$0.00"
            android:textColor="@color/orange"
            android:textSize="16dp"
            />
    </RelativeLayout>

</LinearLayout>