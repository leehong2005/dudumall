<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="12dp"
              android:layout_marginTop="12dp"
              android:orientation="vertical"
              android:background="@android:color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_separator_line_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="15dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/pickup_mode_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取货方式"
            android:textColor="@color/text_gray"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/pickup_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/pickup_mode_txt"
            android:text="门店自提"
            android:textColor="@color/text_color"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_indicator"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/list_separator_line_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="15dp"
        android:paddingRight="12dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/receiving_info_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货信息"
            android:textColor="@color/text_gray"
            android:textSize="16dp"
            />


        <TextView
            android:id="@+id/receiving_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/receiving_info_txt"
            android:ellipsize="end"
            android:maxWidth="100dp"
            android:singleLine="true"
            android:text="王小平"
            android:textColor="@color/text_color"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/receiving_person_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/receiving_person_name"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxWidth="100dp"
            android:text="13426265539"
            android:textColor="@color/text_color"
            android:textSize="16dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/receiving_person_name"
            android:layout_below="@id/receiving_person_name"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="6dp"
            android:text="北京市昌平区回龙观北店嘉园南区3号楼2单元301"
            android:textColor="@color/text_color"
            android:textSize="16dp"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_separator_line_color"/>

    <RelativeLayout
        android:id="@+id/free_deliver_layout"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="12dp"
        android:background="#fff3c5">

        <TextView
            android:id="@+id/free_deliver_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首单免费配送"
            android:textColor="#c7996c"
            android:textSize="14dp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_separator_line_color"/>
</LinearLayout>