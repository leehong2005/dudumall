<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230.5dp"
        android:src="@drawable/login_top"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="31dp"
        android:text="超市代购 送货上门"
        android:textColor="@color/text_gray"
        android:textSize="15dp"
        />

    <LinearLayout
        android:id="@+id/login_by_phone_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/login_phone_btn_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="22.5dp"
            android:layout_height="25dp"
            android:src="@drawable/login_mobile_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="手机号快速登录"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/login_wechat_btn_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="22.5dp"
            android:layout_height="25dp"
            android:src="@drawable/login_wechat_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="微信一键登录"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>
